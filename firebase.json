{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "dev",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/en/**",
          "destination": "/en/index.html"
        },
        {
          "source": "/de/**",
          "destination": "/de/index.html"
        },
        {
          "source": "/**",
          "destination": "/de/index.html"
        }
      ],
      "i18n": {
        "root": "/"
      }
    },
    {
      "target": "prod",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/en/**",
          "destination": "/en/index.html"
        },
        {
          "source": "/de/**",
          "destination": "/de/index.html"
        },
        {
          "source": "/**",
          "destination": "/de/index.html"
        }
      ],
      "i18n": {
        "root": "/"
      }
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  }
}
